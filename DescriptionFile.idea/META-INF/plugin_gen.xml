<idea-plugin version="2">
	<extensions defaultExtensionNs="org.eclipse.xtext.idea">
		<package
			uri="http://www.ptransportation.com/description/DescriptionFile"
			class="com.ptransportation.description.descriptionFile.DescriptionFilePackage"
		/>
		<resourceFactory 
			type="ldf"
			class="org.eclipse.xtext.resource.IResourceFactory"
			factoryClass="com.ptransportation.description.idea.DescriptionFileExtensionFactory"
		/>
		<resourceServiceProvider
			uriExtension="ldf"
			class="org.eclipse.xtext.idea.resource.IResourceIdeaServiceProvider"
			factoryClass="com.ptransportation.description.idea.DescriptionFileExtensionFactory"
		/>

		<lang.setup
			language="com.ptransportation.description.DescriptionFile"
			implementationClass="com.ptransportation.description.idea.DescriptionFileIdeaSetup"
		/>
	</extensions>

	<extensions defaultExtensionNs="com.intellij">
		<psi.treeChangePreprocessor implementation="com.ptransportation.description.idea.lang.psi.DescriptionFileCodeBlockModificationListener"/>

		<fileTypeFactory implementation="com.ptransportation.description.idea.lang.DescriptionFileFileTypeFactory"/>
		<stubElementTypeHolder class="com.ptransportation.description.idea.lang.DescriptionFileElementTypeProvider"/>
		<lang.ast.factory 
			language="com.ptransportation.description.DescriptionFile"
			factoryClass="com.ptransportation.description.idea.DescriptionFileExtensionFactory"
			implementationClass="org.eclipse.xtext.idea.lang.BaseXtextASTFactory"
		/>
		<lang.parserDefinition 
			language="com.ptransportation.description.DescriptionFile"
			factoryClass="com.ptransportation.description.idea.DescriptionFileExtensionFactory"
			implementationClass="com.ptransportation.description.idea.lang.parser.DescriptionFileParserDefinition"
		/>
		<lang.findUsagesProvider 
			language="com.ptransportation.description.DescriptionFile"
			factoryClass="com.ptransportation.description.idea.DescriptionFileExtensionFactory"
			implementationClass="org.eclipse.xtext.idea.findusages.BaseXtextFindUsageProvider"
		/>
		<lang.refactoringSupport 
			language="com.ptransportation.description.DescriptionFile"
			factoryClass="com.ptransportation.description.idea.DescriptionFileExtensionFactory"
			implementationClass="org.eclipse.xtext.idea.refactoring.BaseXtextRefactoringSupportProvider"
		/>
		<lang.namesValidator 
			language="com.ptransportation.description.DescriptionFile"
			factoryClass="com.ptransportation.description.idea.DescriptionFileExtensionFactory"
			implementationClass="com.intellij.lang.refactoring.NamesValidator"
		/>
		<lang.syntaxHighlighterFactory key="com.ptransportation.description.DescriptionFile" implementationClass="com.ptransportation.description.idea.highlighting.DescriptionFileSyntaxHighlighterFactory" />
		<lang.braceMatcher 
			language="com.ptransportation.description.DescriptionFile"
			factoryClass="com.ptransportation.description.idea.DescriptionFileExtensionFactory"
			implementationClass="com.intellij.lang.PairedBraceMatcher"
		/>
		<annotator 
			language="com.ptransportation.description.DescriptionFile"
			factoryClass="com.ptransportation.description.idea.DescriptionFileExtensionFactory"
			implementationClass="org.eclipse.xtext.idea.annotation.IssueAnnotator"
		/>
		<completion.contributor language="com.ptransportation.description.DescriptionFile" implementationClass="com.ptransportation.description.idea.completion.DescriptionFileCompletionContributor"/>
		<pom.declarationSearcher implementation="com.ptransportation.description.idea.lang.pom.DescriptionFilePomDeclarationSearcher"/>

		<lang.psiStructureViewFactory 
			language="com.ptransportation.description.DescriptionFile"
			factoryClass="com.ptransportation.description.idea.DescriptionFileExtensionFactory"
			implementationClass="com.intellij.lang.PsiStructureViewFactory"
		/>
		<facetType implementation="com.ptransportation.description.idea.facet.DescriptionFileFacetType"/>
      	<lang.documentationProvider 
      		language="com.ptransportation.description.DescriptionFile"
      		factoryClass="com.ptransportation.description.idea.DescriptionFileExtensionFactory"
      		implementationClass="org.eclipse.xtext.idea.documentation.IdeaDocumentationProvider"
      	/>
		<colorSettingsPage implementation="com.ptransportation.description.idea.highlighting.DescriptionFileColorSettingsPage"/>
		<highlightVisitor implementation="com.ptransportation.description.idea.highlighting.DescriptionFileSemanticHighlightVisitor"/>

		<lang.formatter 
			language="com.ptransportation.description.DescriptionFile"
			factoryClass="com.ptransportation.description.idea.DescriptionFileExtensionFactory"
			implementationClass="com.intellij.formatting.FormattingModelBuilder"
		/>
		<lang.commenter 
			language="com.ptransportation.description.DescriptionFile"
			factoryClass="com.ptransportation.description.idea.DescriptionFileExtensionFactory"
			implementationClass="com.intellij.lang.CodeDocumentationAwareCommenter"
		/>
	</extensions>
</idea-plugin>

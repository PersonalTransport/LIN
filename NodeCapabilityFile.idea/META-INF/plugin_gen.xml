<idea-plugin version="2">
	<extensions defaultExtensionNs="org.eclipse.xtext.idea">
		<package
			uri="http://www.ptransportation.com/capability/NodeCapabilityFile"
			class="com.ptransportation.capability.nodeCapabilityFile.NodeCapabilityFilePackage"
		/>
		<resourceFactory 
			type="ncf"
			class="org.eclipse.xtext.resource.IResourceFactory"
			factoryClass="com.ptransportation.capability.idea.NodeCapabilityFileExtensionFactory"
		/>
		<resourceServiceProvider
			uriExtension="ncf"
			class="org.eclipse.xtext.idea.resource.IResourceIdeaServiceProvider"
			factoryClass="com.ptransportation.capability.idea.NodeCapabilityFileExtensionFactory"
		/>

		<lang.setup
			language="com.ptransportation.capability.NodeCapabilityFile"
			implementationClass="com.ptransportation.capability.idea.NodeCapabilityFileIdeaSetup"
		/>
	</extensions>

	<extensions defaultExtensionNs="com.intellij">
		<psi.treeChangePreprocessor implementation="com.ptransportation.capability.idea.lang.psi.NodeCapabilityFileCodeBlockModificationListener"/>

		<fileTypeFactory implementation="com.ptransportation.capability.idea.lang.NodeCapabilityFileFileTypeFactory"/>
		<stubElementTypeHolder class="com.ptransportation.capability.idea.lang.NodeCapabilityFileElementTypeProvider"/>
		<lang.ast.factory 
			language="com.ptransportation.capability.NodeCapabilityFile"
			factoryClass="com.ptransportation.capability.idea.NodeCapabilityFileExtensionFactory"
			implementationClass="org.eclipse.xtext.idea.lang.BaseXtextASTFactory"
		/>
		<lang.parserDefinition 
			language="com.ptransportation.capability.NodeCapabilityFile"
			factoryClass="com.ptransportation.capability.idea.NodeCapabilityFileExtensionFactory"
			implementationClass="com.ptransportation.capability.idea.lang.parser.NodeCapabilityFileParserDefinition"
		/>
		<lang.findUsagesProvider 
			language="com.ptransportation.capability.NodeCapabilityFile"
			factoryClass="com.ptransportation.capability.idea.NodeCapabilityFileExtensionFactory"
			implementationClass="org.eclipse.xtext.idea.findusages.BaseXtextFindUsageProvider"
		/>
		<lang.refactoringSupport 
			language="com.ptransportation.capability.NodeCapabilityFile"
			factoryClass="com.ptransportation.capability.idea.NodeCapabilityFileExtensionFactory"
			implementationClass="org.eclipse.xtext.idea.refactoring.BaseXtextRefactoringSupportProvider"
		/>
		<lang.namesValidator 
			language="com.ptransportation.capability.NodeCapabilityFile"
			factoryClass="com.ptransportation.capability.idea.NodeCapabilityFileExtensionFactory"
			implementationClass="com.intellij.lang.refactoring.NamesValidator"
		/>
		<lang.syntaxHighlighterFactory key="com.ptransportation.capability.NodeCapabilityFile" implementationClass="com.ptransportation.capability.idea.highlighting.NodeCapabilityFileSyntaxHighlighterFactory" />
		<lang.braceMatcher 
			language="com.ptransportation.capability.NodeCapabilityFile"
			factoryClass="com.ptransportation.capability.idea.NodeCapabilityFileExtensionFactory"
			implementationClass="com.intellij.lang.PairedBraceMatcher"
		/>
		<annotator 
			language="com.ptransportation.capability.NodeCapabilityFile"
			factoryClass="com.ptransportation.capability.idea.NodeCapabilityFileExtensionFactory"
			implementationClass="org.eclipse.xtext.idea.annotation.IssueAnnotator"
		/>
		<completion.contributor language="com.ptransportation.capability.NodeCapabilityFile" implementationClass="com.ptransportation.capability.idea.completion.NodeCapabilityFileCompletionContributor"/>
		<pom.declarationSearcher implementation="com.ptransportation.capability.idea.lang.pom.NodeCapabilityFilePomDeclarationSearcher"/>

		<lang.psiStructureViewFactory 
			language="com.ptransportation.capability.NodeCapabilityFile"
			factoryClass="com.ptransportation.capability.idea.NodeCapabilityFileExtensionFactory"
			implementationClass="com.intellij.lang.PsiStructureViewFactory"
		/>
		<facetType implementation="com.ptransportation.capability.idea.facet.NodeCapabilityFileFacetType"/>
      	<lang.documentationProvider 
      		language="com.ptransportation.capability.NodeCapabilityFile"
      		factoryClass="com.ptransportation.capability.idea.NodeCapabilityFileExtensionFactory"
      		implementationClass="org.eclipse.xtext.idea.documentation.IdeaDocumentationProvider"
      	/>
		<colorSettingsPage implementation="com.ptransportation.capability.idea.highlighting.NodeCapabilityFileColorSettingsPage"/>
		<highlightVisitor implementation="com.ptransportation.capability.idea.highlighting.NodeCapabilityFileSemanticHighlightVisitor"/>

		<lang.formatter 
			language="com.ptransportation.capability.NodeCapabilityFile"
			factoryClass="com.ptransportation.capability.idea.NodeCapabilityFileExtensionFactory"
			implementationClass="com.intellij.formatting.FormattingModelBuilder"
		/>
		<lang.commenter 
			language="com.ptransportation.capability.NodeCapabilityFile"
			factoryClass="com.ptransportation.capability.idea.NodeCapabilityFileExtensionFactory"
			implementationClass="com.intellij.lang.CodeDocumentationAwareCommenter"
		/>
	</extensions>
</idea-plugin>
